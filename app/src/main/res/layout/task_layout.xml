<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootContainer"
    android:theme="@style/SwitchTheme"
    app:cardElevation="4dp"
    app:cardCornerRadius="15dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp">


    <RelativeLayout
        android:id="@+id/relativeContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        >

        <TextView
            android:id="@+id/taskName"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imageViewTaskCategory"
            android:paddingStart="15dp"
            android:layout_centerVertical="true"
            android:text="Really Important Task"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imageViewTaskCategory"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/alarm_icon" />

        <ImageButton
            android:id="@+id/imageButtonCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/task_cancel"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"/>

        <ImageButton
            android:id="@+id/imageButtonComplete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/imageButtonCancel"
            app:srcCompat="@drawable/task_complete"
            android:layout_marginEnd="5dp"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"/>


    </RelativeLayout>



</androidx.cardview.widget.CardView>